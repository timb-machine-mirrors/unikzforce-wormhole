// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/go
{
	"name": "wormhole",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"_CLAB_VERSION": "0.56.0"
		}
	},
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:latest": {
			"version": "latest"
		},
		"ghcr.io/devcontainers/features/go:1": {},
		"ghcr.io/guiyomh/features/golangci-lint:0": {},
		"ghcr.io/guiyomh/features/goreleaser:0": {},
		"ghcr.io/guiyomh/features/gotestsum:0": {},
		"ghcr.io/guiyomh/features/pact-go:0": {},
		"ghcr.io/azutake/devcontainer-features/go-packages-install:0": {},
		"ghcr.io/marcozac/devcontainer-features/gofumpt:1": {}
	},
	"runArgs": ["--privileged"],
	"privileged": true,

	"customizations": {
		"vscode": {
			"extensions": [
				// various tools
				"ms-azuretools.vscode-docker",
				"tuxtina.json2yaml",
				"vscode-icons-team.vscode-icons",
				"mutantdino.resourcemonitor"
			]
		}
	},
	"mounts": [
		"source=clab-vscode-home-dir,target=/home/vscode,type=volume",
		"source=clab-docker-root-config,target=/root/.docker,type=volume",
//		"target=/home/vscode/.vscode-server,type=volume",
		"source=/sys/kernel/debug,target=/sys/kernel/debug,type=bind"
	]


	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "go version",

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
